<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.devpj.MovieRecommendation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:node="remove" />
    <uses-permission
        android:name="android.permission.CAMERA"
        tools:node="remove" />
    <permission
        android:name="com.devpj.MovieRecommendation.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/menuicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/menuicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.SplashScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.SignUp"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.ForgotPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.ProductExtra"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.EditCart"
            android:screenOrientation="portrait" />

        <activity android:name="com.devpj.MovieRecommendation.PaymentIntegrationMethods.OrderConfirmed" />
        <activity android:name="com.devpj.MovieRecommendation.PaymentIntegrationMethods.RazorPayIntegration" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDagu1__IQVkCjlGIGYkbdUf-JcJ0hofZ0" />
        <activity
            android:name="com.devpj.MovieRecommendation.Activities.MapViewActivity"
            android:screenOrientation="portrait" />


        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_K6veGqYGkoWgi1" />
        <!-- Firebase Notifications -->
        <service android:name="com.devpj.MovieRecommendation.FCM.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name="com.devpj.MovieRecommendation.FCM.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- ./Firebase Notifications -->
        <activity android:name="com.devpj.MovieRecommendation.Activities.AccountVerification"/>

    </application>

</manifest>